<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.android.TestAndroidActivity">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/img"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

    <com.dh.summarize.view.test.PassWordView
            android:id="@+id/pass1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:password_corner="5dp"
            app:password_divider_color="@color/colorPrimary"
            app:password_divider_size="2dp"
            app:password_number="6"
            app:password_point_color="@color/colorPrimary"
            app:password_point_radius="3dp"
            app:password_stroke_color="@color/colorPrimary"
            app:password_stroke_size="2dp"
            android:layout_marginTop="50dp"
            android:visibility="gone"/>

    <com.dh.summarize.view.test.PasswordView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pass_corner="5dp"
            app:pass_num="6"
            app:pass_point_color="@color/colorPrimary"
            app:pass_point_radius="5dp"
            app:pass_stroke="2dp"
            app:pass_stroke_color="@color/colorPrimary"
            android:visibility="gone"/>

    <com.dh.summarize.view.MotionEventView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    <com.dh.summarize.view.MotionEventView2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:src="@mipmap/girl"/>

    <com.dh.summarize.view.test.MotionEventView3
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:open_rotate_revert="true"
            app:open_scale_revert="true"
            app:open_translate_revert="true"
            app:revert_duration="300"
            app:max_scale="1.5"
            app:min_scale="1"
            app:open_animator="true"
            app:scale_center="finger_center"
            android:src="@mipmap/girl"
            android:visibility="gone"
            android:background="@color/colorPrimary"/>

    <com.dh.summarize.view.test.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:min_scale_factor="0.6"
            app:max_scale_factor="1.5"
            app:can_back_rotate="true"
            app:can_back_scale="true"
            app:can_back_translate="true"
            android:src="@mipmap/girl"
            android:visibility="gone" />


